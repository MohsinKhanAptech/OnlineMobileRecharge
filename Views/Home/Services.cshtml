@model OnlineMobileRecharge.Models.Service
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Services";
}

<!-- breadcumnd banner Here -->
<section class="breadcumnd__banner p-5 mt-2">
    <!--Container-->
    <div class="container">
        <div class="breadcumnd__wrapper">
            <h2 class="bread__title">
                Services
            </h2>
            <ul class="breadcumnd__link">
                <li>
                    <a asp-action="Index">
                        Home
                    </a>
                </li>
                <li>
                    <i class="material-symbols-outlined">
                        chevron_right
                    </i>
                </li>
                <li>
                    Services
                </li>
            </ul>
        </div>
    </div>
    <!--Container-->
</section>
<!-- breadcumnd banner End -->
<!-- Services Section Here -->
<section class="flight__onewaysection pb__60 pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-10 col-lg-12">
                <div class="order__wrappers">
                    <div class="choose__valu">
                        <div class="oparator__texts">
                            <h5>Services</h5>
                        </div>
                        <div class="card border-secondary-subtle">
                            <div class="table-responsive rounded">
                                <table class="table text-center mb-0">
                                    <thead>
                                        <tr class="bg-secondary-subtle">
                                            <th scope="col">@Html.DisplayNameFor(model => model.Do_Not_Disturb)</th>
                                            <th scope="col">Caller Tune Name</th>
                                            <th scope="col">Caller Tune</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <form asp-action="DoNotDisturb" id="dndForm" class="d-block pt-2 mt-1" method="post">
                                                        <input type="hidden" name="serviceId" value="@Model.Service_Id" />
                                                        <input asp-for="@Model.Do_Not_Disturb" name="doNotDisturb" class="form-check-input"
                                                               onchange="document.getElementById('dndForm').submit()" style="width:28px; aspect-ratio:1;" />
                                                </form>
                                            </td>
                                            <td><span class="d-block pt-3 mt-1">@Html.DisplayFor(model => model.Caller_Tune.Tune_Name)</span></td>
                                            <td>
                                                <span class="d-block mt-1">
                                                    <audio controls src="@Model.Caller_Tune.Tune_Path"></audio>
                                                </span>
                                            </td>
                                            <td><a asp-action="CallerTunes" class="cmn__btn mt-1"><span>Change Tune</span></a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Services Section Here -->
