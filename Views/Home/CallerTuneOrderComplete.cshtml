@model OnlineMobileRecharge.Models.ServiceTransaction
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Order Complete";
}

<!-- breadcumnd banner Here -->
<section class="breadcumnd__banner p-5 mt-2">
    <!--Container-->
    <div class="container">
        <div class="breadcumnd__wrapper">
            <h2 class="bread__title">
                Receipt
            </h2>
            <ul class="breadcumnd__link">
                <li>
                    <a asp-action="Index">
                        Home
                    </a>
                </li>
                <li>
                    <i class="material-symbols-outlined">
                        chevron_right
                    </i>
                </li>
                <li>
                    Complete
                </li>
            </ul>
        </div>
    </div>
    <!--Container-->
</section>
<!-- breadcumnd banner End -->
<!-- order here -->
<section class="order__section successful__section pb__60">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-8 col-xl-10 col-lg-12">
                <div class="payment__success__inner">
                    <div class="available__balance pb__40">
                        <div class="balance">
                            <img src="~/Home/assets/img/payment/balance.png" alt="img">
                            <span class="title fz-24 fw-700">
                                Your Order
                            </span>
                        </div>
                        <span class="fz-24 fw-700">
                            @Html.DisplayFor(model => model.CallerTune.Tune_Price)
                        </span>
                    </div>
                    <ul class="order__button mb__40 justify-content-center">
                        <li>
                            <a href="javascript:void(0)" class="cmn__order">
                                <span>
                                    Summary
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)" class="cmn__order active">
                                <span>
                                    Done
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div class="payment__success__header">
                        <div class="icon">
                            <i class="material-symbols-outlined">
                                done
                            </i>
                        </div>
                        <h3>Payment Successful</h3>
                        <p class="primary-text">Recharge Confirmed.</p>
                    </div>
                    <div class="payment__success__body">
                        <ul>
                            <li>
                                <span>Transactions ID</span>
                                <span class="textbo">@Html.DisplayFor(model => model.ServiceTransaction_Id)</span>
                            </li>
                            <li>
                                <span>Date</span>
                                <span class="textbo">@Model.Transaction_Date.ToLocalTime()</span>
                            </li>
                            <li>
                                <span>Mode of Payment</span>
                                <span class="textbo">Card</span>
                            </li>
                            <li>
                                <span>Transaction Status</span>
                                <span class="textbo">Success</span>
                            </li>
                            <li>
                                <span>Mobile No</span>
                                <span class="textbo">@Html.DisplayFor(model => model.Mobile_Number)</span>
                            </li>
                            <li>
                                <span>Subject</span>
                                <span class="textbo">@Html.DisplayFor(model => model.CallerTune.Tune_Name)</span>
                            </li>
                            <li>
                                <span>Payment Amount</span>
                                <span class="textbo">@Html.DisplayFor(model => model.CallerTune.Tune_Price)</span>
                            </li>
                        </ul>
                    </div>
                    <div class="payment__success__footer">
                        <div class="payment-success__footer-inner">
                            <a asp-action="CallerTuneGenerateReceipt" asp-route-id="@Model.ServiceTransaction_Id" asp-route-download="true">
                                <span class="icon">
                                    <i class="material-symbols-outlined">
                                        download
                                    </i>
                                </span>
                                <span>
                                    Download
                                </span>
                            </a>
                            <a asp-action="CallerTuneGenerateReceipt" asp-route-id="@Model.ServiceTransaction_Id" asp-route-download="false">
                                <span class="icon">
                                    <i class="material-symbols-outlined">
                                        print
                                    </i>
                                </span>
                                <span>
                                    Print Receipt
                                </span>
                            </a>
                            <a asp-action="CallerTuneGenerateReceipt" asp-route-id="@Model.ServiceTransaction_Id" asp-route-download="false">
                                <span class="icon">
                                    <i class="material-symbols-outlined">
                                        drafts
                                    </i>
                                </span>
                                <span>
                                    Email Receipt
                                </span>
                            </a>
                        </div>
                        <div class="dbutton">
                            <a asp-action="CallerTunes" class="cmn__btn"><span> Go Back </span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- order End -->