@model OnlineMobileRecharge.Models.TaxRate
@{
    ViewData["Title"] = "Delete Tax Rate";
    Layout = "_AdminLayout";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Delete Tax Rate</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Delete Tax Rate</li>
            </ol>
            <div class="col-12">
                <div class="container">
                    <div class="row justify-content-center my-4 p-4">
                        <div class="col-xxl-10">
                            <div class="card mb-4">
                                <div class="table-responsive">
                                    <table class="table table-bordered m-0 p-0">
                                        <tbody>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tax_Name)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tax_Name)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tax_Description)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tax_Description)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tax_Rate)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tax_Rate)
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <div class="w-100 d-flex flex-row-reverse flex-wrap gap-2 p-2">
                                    <form asp-action="TaxDelete" method="post">
                                        <input type="hidden" asp-for="Tax_Id" />
                                        <input type="submit" class="btn btn-danger" value="YES!" />
                                    </form>
                                    <a asp-action="TaxEdit" asp-route-id="@Model?.Tax_Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="TaxRates" class="btn btn-primary">NO!</a>
                                    <div class="btn btn-outline-dark pe-none">Do you really waant to delete this entry reallly?</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
    <partial name="_AdminFooterPartial" />
</div>
