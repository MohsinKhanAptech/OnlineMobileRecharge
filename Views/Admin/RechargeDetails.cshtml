@model OnlineMobileRecharge.Models.Recharge

@{
    ViewData["Title"] = "Recharge Details";
    Layout = "_AdminLayout";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Recharge Details</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Recharge Details</li>
            </ol>
            <div class="col-12">
                <div class="container">
                    <div class="row justify-content-center my-4 p-4">
                        <div class="col-xxl-10">
                            <div class="card mb-4">
                                <div class="table-responsive">
                                    <table class="table table-bordered m-0 p-0">
                                        <tbody>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Name)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Name)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Description)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Description)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Price)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Price)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Tax_Rate)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Tax_Rate)% Tax Rate
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Taxed_Amount)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Taxed_Amount)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Amount)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Amount)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Recharge_Type)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Recharge_Type)
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="w-100 d-flex flex-row-reverse flex-wrap gap-2 p-2">
                                    <a asp-action="RechargeDelete" asp-route-id="@Model?.Recharge_Id" class="btn btn-danger">Delete</a>
                                    <a asp-action="RechargeEdit" asp-route-id="@Model?.Recharge_Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="Recharges" class="btn btn-secondary">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
    <partial name="_AdminFooterPartial" />
</div>