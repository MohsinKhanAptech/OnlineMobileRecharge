@model OnlineMobileRecharge.Models.CallerTune

@{
    ViewData["Title"] = "Delete Caller Tune";
    Layout = "_AdminLayout";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Delete Caller Tune</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Delete Caller Tune</li>
            </ol>
            <div class="col-12">
                <div class="container">
                    <div class="row justify-content-center my-4 p-4">
                        <div class="col-xxl-10">
                            <div class="card mb-4">
                                <div class="table-responsive">
                                    <table class="table table-bordered m-0 p-0">
                                        <tbody>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tune_Name)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tune_Name)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tune_Description)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tune_Description)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tune_Path)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tune_Path)
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    <span class="d-block pt-4">Audio</span>
                                                </td>
                                                <td class="col-sm-10">
                                                    <audio class="mt-2" controls src="@Model.Tune_Path"></audio>
                                                </td>
                                            </tr>
                                            <tr class="d-flex flex-column d-sm-table-row">
                                                <td class="col-sm-2 fw-bold bg-opacity-10 bg-secondary">
                                                    @Html.DisplayNameFor(model => model.Tune_Price)
                                                </td>
                                                <td class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Tune_Price)
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="w-100 d-flex flex-row-reverse flex-wrap gap-2 p-2">
                                    <form asp-action="CallerTuneDelete" method="post">
                                        <input type="hidden" asp-for="Tune_Id" />
                                        <input type="submit" class="btn btn-danger" value="YES!" />
                                    </form>
                                    <a asp-action="CallerTuneEdit" asp-route-id="@Model?.Tune_Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="CallerTunes" class="btn btn-primary">NO!</a>
                                    <div class="btn btn-outline-dark pe-none">Do you really want to delete this entry?</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <partial name="_AdminFooterPartial" />
</div>
