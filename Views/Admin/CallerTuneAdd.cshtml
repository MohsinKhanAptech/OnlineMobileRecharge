@model OnlineMobileRecharge.Models.CallerTune

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Caller Tune";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Add Caller Tune</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Add Caller Tune</li>
            </ol>

            <div class="col-12">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <form asp-action="TuneAdd" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Tune_Name" class="form-control" />
                                    <label asp-for="Tune_Name" class="control-label"></label>
                                    <span asp-validation-for="Tune_Name" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Tune_Description" class="form-control" />
                                    <label asp-for="Tune_Description" class="control-label"></label>
                                    <span asp-validation-for="Tune_Description" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Tune_Path" class="form-control" />
                                    <label asp-for="Tune_Path" class="control-label"></label>
                                    <span asp-validation-for="Tune_Path" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Tune_Price" class="form-control" />
                                    <label asp-for="Tune_Price" class="control-label"></label>
                                    <span asp-validation-for="Tune_Price" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 d-flex flex-row-reverse gap-2">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a asp-action="CallerTunes" class="btn btn-secondary">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <partial name="_AdminFooterPartial" />
</div>
